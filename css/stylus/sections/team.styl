.team-hero
  wrapped()
  padding-top 100px
  display flex
  min-height 700px
  justify-content center
  align-items center
  background-size cover
  text-align center
  
  +above(1440px)
    height 70vh
    
  +below(48rem)
    wrapped(90%)
    padding-bottom 6rem
  
  .text-container
    lost-column 8/12
    
    +below(48rem)
      lost-column 1/1
      
.team-container
  wrapped()
  display flex
  flex-wrap wrap
  margin-bottom 6rem
  
  +below(48rem)
    wrapped(90%)
      
.team-member
  lost-waffle 1/4 4 flex
  border-radius 5px
  overflow hidden
  position relative
  text-decoration none
  color inherit
  transition all 250ms ease-in-out
  
  +below(48rem)
    lost-waffle 1/3 3 flex

  +below(38rem)
    lost-waffle 1/2 2 flex

  +below(28rem)
    lost-waffle 1/1 1 flex
  
  &:hover .team-member-info
    transform translateY(-1rem)
  
  &-photo
    padding 0
    margin 0
      
  &-info
    position absolute
    padding 1rem
    bottom 0
    left 1rem
    transform translateY(100%)
    width calc(100% - 2rem)
    background-color white
    transition all 250ms ease-in-out
    text-align center
    
  &-name
    font-family 'velino', serif
    margin 0
    font-weight normal
    font-size 1.5rem
    color $dark-blue
    
  &-title
    margin 0
    font-size .75rem
    text-transform uppercase
    font-weight 600
    letter-spacing 3.5px
    color rgba($dark-blue, .5)

