.startup
  display flex
  align-items center
  position relative
  margin-top 6rem
  margin-bottom 6rem

.startup--info
  position relative
  
  +below(48rem)
    text-align center
  
  +above(48rem)
    padding 2rem 5rem
    lost-column 7/12 12 0

    &:before
      position absolute
      top 0
      right -5rem
      bottom 0
      left 0
      content ''
      border 1px solid rgba($secondary, .4)
      z-index -1

  .btn__principal
    margin-top 1rem

.startup-name
  margin-bottom 1rem
  @extend .title

.startup--image
  shadow()
  z-index -2
  overflow hidden
  border-radius 4px
  lost-column 5/12
  
  +below(48rem)
    display none